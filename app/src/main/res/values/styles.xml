<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.LaunchActivity">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <!-- Buttons -->

    <style name="PrimaryButton" parent="BoldText">
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text -->

    <style name="TitleText" parent="BoldText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldText" parent="BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="RegularText" parent="BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="LightText" parent="BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
